version: "3.4"
services: 
    db:
        image: mariadb:latest
        env_file: ./mysqldb.env
        restart: always
        volumes:
            - database_files:/var/lib/mysql
    wordpress:
        image: wordpress:latest
        env_file: ./wordpress.env
        restart: always
        links: 
            - "db:mysql"
        volumes:
            - wordpress_files:/var/www/html/
        ports: 
            - "8080:80"
volumes: 
    wordpress_files:
    database_files: